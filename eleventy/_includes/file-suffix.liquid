{% capture blank %}
    {% assign global_scope_file_name = file_name %}
    {% assign global_scope_file_suffixed = file_suffixed %}
    {% assign global_scope_blank = blank %}

    {% assign file_name = include.file_name | split: '.' %}
    {% assign file_suffixed = file_name[0] | append: include.suffix %}
    {% assign file_name = file_suffixed | append: '.' | append: file_name[1] %}

    {% assign file_suffixed = global_scope_file_suffixed %}
    {% assign blank = global_scope_blank %}
{% endcapture %}{{ file_name }}{% assign file_name = global_scope_file_name %}
